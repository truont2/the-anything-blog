{{#if loggedIn}}
<ul id="blog-list">
  {{#each posts}}
    <li>
      <div class="card">
        <div class="card-header">
          {{ name}}
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>{{ content}}</p>
            <footer class="blockquote-footer">Someone famous in
              <cite title="Source Title">Source Title</cite></footer>
          </blockquote>
        </div>
      </div>
    </li>
  {{/each}}
</ul>
{{#else}}
    <a href="/login">You must login first to view this page</a>
{{/if}}